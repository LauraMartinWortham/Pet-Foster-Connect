<%- include('partials/header') %>

<main>
<h2>Bienvenue sur votre espace personnel</h2>

<div class=#>
  <ul>
    <li><button class=#>Mon profil</button></li>
    <li><button class=#>Rechercher un animal</button></li>
    <li><button class=#>Rechercher un refuge</button></li>
  </ul>
</div>

<div class=#>
  <h3>Mon profil</h3>

  <form action="#" method="POST">
    <fieldset>
      <legend>Mes informations</legend>
      <label class=# for="prenom">Prénom</label>
      <input class=# type="text" id="prenom" name="prenom" value="<%= famille.prenom %>" disabled>
    
      <label class=# for="nom">Nom</label>
      <input class=# type="text" id="nom" name="nom" value="<%= famille.nom %>" disabled>
    
      <label class=# for="email">Email</label>
      <input class=# type="email" id="email" name="email" value="<%= famille.email %>" disabled>
    <!-- TO DO : Ajout Icone Crayon + UpdateFeature -->
    </fieldset>

    <fieldset>
      <legend>Mon accueil</legend>

      <label class=# for="hebergement">Type</label>
      <input class=# type="text" id="hebergement" name="hebergement" value="<%= famille.hebergement %>" disabled>

      <label class=# for="terrain">Terrain</label>
      <input class=# type="text" id="terrain" name="terrain" value="<%= famille.terrain %>" disabled>

      <label class=# for="rue">Rue</label>
      <input class=# type="text" id="rue" name="rue" value="<%= famille.rue %>" disabled>
            
      <label class=# for="commune">Commune</label>
      <input class=# type="text" id="commune" name="commune" value="<%= famille.commune %>" disabled>

      <label class=# for="code_postal">Code Postal</label>
      <input class=# type="number" id="code_postal" name="code_postal" pattern="[01-97]{1} [0-9]{3}" value="<%= famille.code_postal %>" disabled>
      
      <label for="departement">Département</label>
      <input class=# type="number" id="departement" name="departement" value="<%= famille.departement %>" disabled>

    </fieldset>

    <fieldset>
      <legend>Je peux accueillir</legend>
        <% especes.forEach(espece => { %>
          <div>
            <label class=# for="<%= espece.nom %>"><%= espece.nom %></label>
            <input class=# type="checkbox" id="<%= espece.nom %>" name="<%= espece.nom %>" />
          </div>
        <% }) %>
    </fieldset>
      
  </form>
</div>
</main>

<%- include('partials/footer') %>