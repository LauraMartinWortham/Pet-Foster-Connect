<%- include('partials/header') %>

<main class="justify-self-stretch flex-1">
		<section class="flex flex-col p-12 mx-auto">
			<h2 class="font-grands text-3xl text-center my-2 w-full"><%= association.nom %></h3>

			<div class="font-body mx-auto w-[80%] rounded-lg my-4">
				<% if (association.images_association.length > 0 ) { %>
					<img src="<%= association.images_association[0].url %>" alt="Logo de <%= association.nom %>">
				<% } %>
			</div>

			<article class="font-body mx-auto w-[80%] bg-zoning rounded-lg shadow dark:bg-gray-800 my-4">
					<div class="text-center w-full py-2">
						<h3 class="font-grands text-3xl text-center my-2 w-full">A propos de <%= association.nom %></h3>
					</div>

				<div class="text-center w-full py-2">
					<p class="font-body text-texte">Adresse : <%= association.rue %>,&nbsp;<%= association.code_postal %>,&nbsp;<%= association.commune%>,&nbsp;<%= association.pays %></p>
					<p class="font-body text-texte">Téléphone : <%= association.telephone %></p>
					<p class="font-body text-texte">E-mail : <%= association.identifiant_association.email %></p>	
				</div>

				<!-- Description ?
				<div class="text-center w-full py-2">
				<p class="font-body text-texte">Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus magni rerum, unde sunt beatae ipsam rem est sequi minus eligendi doloremque aliquid laudantium eos perspiciatis obcaecati ea voluptas harum et?</p>
				</div>
				-->
			</article>
	</section>
	
  <section class="p-4 block">
    <h2 class="font-grands text-3xl text-center my-2">Ils vous attendent de patte ferme !</h2>
      <!-- Carousel of ONE -->
      <section id="animal-carousel" class="md:hidden relative mx-auto h-auto w-[90%] bg-zoning rounded-lg shadow dark:bg-gray-800">

        <button
          class="absolute top-0 start-0 z-1 flex items-center justify-center h-full pl-2 cursor-pointer group focus:outline-none  size-10 opacity-75"
          type="button" id="previous" aria-label="Précédent"><img src="/icons/left.svg" alt=""></button>

        <div class="h-auto mx-auto rounded-lg p-4">
          <% association.pensionnaires.forEach(animal=> { %>
            <div class="hidden carousel-img">
              <div class="flex bg-fond rounded-lg shadow dark:bg-gray-800 flex-col md:flex-col mx-auto my-2 w-[75%] p-4">

									<div class="w-full md:w-full flex justify-center items-center">
                    <% if (animal.images_animal.length > 0 ) { %>
										  <img class="object-contain md:h-full rounded-lg"
											src="<%= animal.images_animal[0].url %>" alt="Photo de <%= animal.nom %>">
                    <% } else { %>
                      <img class="object-contain md:h-full rounded-lg" src="/images/empty.png" alt="Photo à venir">
                    <% } %>
									</div>


                <div class="flex-auto text-center">
                  <div class="flex flex-wrap my-2">
                    <h3 class="flex-auto text-xl font-semibold dark:text-gray-50">
                      <%= animal.nom %>
                    </h3>
                    <h4 class="flex-none w-full mt-2 text-sm font-medium text-gray-500 dark:text-gray-300">
                      <%= animal.espece.nom %>
                    </h4>
                    <hr>
                    <p class="flex-none w-full mt-2 text-sm font-medium text-gray-500 dark:text-gray-300">Age : <%= animal.age
                        %>
                    </p>
                    <p class="flex-none w-full mt-2 text-sm font-medium text-gray-500 dark:text-gray-300">Localisation : <%=
                        animal.departement %>
                    </p>
                  </div>
                  <div class="flex mb-4 text-sm font-medium">
                    <a class="py-2 px-4 bg-accents1-light text-fond w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg"
                      href="/animaux/<%= animal.id %>">Découvrir</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>

        <button
          class="absolute top-0 end-0 z-1 flex items-center justify-center h-full pr-2 cursor-pointer group focus:outline-none size-10 opacity-75"
          type="button" id="next" aria-label="Suivant"><img src="/icons/right.svg" alt=""></button>

      </section>

      <!-- Carousel of THREE -->
      <section id="animal-carousel3" class=" flex flex-row max-[767px]:hidden relative mx-auto w-[90%] h-auto bg-zoning rounded-lg shadow dark:bg-gray-800">
      
        <button
          class="absolute top-0 start-0 z-1 flex items-center justify-center h-full pl-2 cursor-pointer group focus:outline-none size-10 opacity-75"
          type="button" id="previous3" aria-label="Précédent"><img src="/icons/left.svg" alt=""></button>
      
        <div class="h-auto w-auto flex rounded-lg my-6 gap-4 px-8">
          <% association.pensionnaires.forEach(animal=> { %>
            <div class="hidden carousel3-img place-self-center">
              <div class="flex bg-zoning rounded-lg shadow dark:bg-gray-800 flex-row md:flex-col p-4">

									<div class="w-full md:w-full flex justify-center items-center">
                    <% if (animal.images_animal.length > 0 ) { %>
										  <img class="object-contain w-[80%] h-48 md:h-full rounded-lg"
											src="<%= animal.images_animal[0].url %>" alt="Photo de <%= animal.nom %>">
                    <% } else { %>
                        <img class="object-contain w-[80%] h-48 md:h-full rounded-lg" src="/images/empty.png" alt="Photo à venir">
                    <% } %>
									</div>

                <div class="flex-auto text-center">
                  <div class="flex flex-wrap my-2">
                    <h3 class="flex-auto text-xl font-semibold dark:text-gray-50">
                      <%= animal.nom %>
                    </h3>
                    <h4 class="flex-none w-full mt-2 text-sm font-medium text-gray-500 dark:text-gray-300">
                      <%= animal.espece.nom %>
                    </h4>
                    <hr>
                    <p class="flex-none w-full mt-2 text-sm font-medium text-gray-500 dark:text-gray-300">Age : <%= animal.age
                        %>
                    </p>
                    <p class="flex-none w-full mt-2 text-sm font-medium text-gray-500 dark:text-gray-300">Localisation : <%=
                        association.code_postal %>
                    </p>
                  </div>
                  <div class="flex mb-4 text-sm font-medium">
                    <a class="py-2 px-4 bg-accents1-light text-fond w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg"
                      href="/animaux/<%= animal.id %>">Découvrir</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      
        <button
          class="absolute top-0 end-0 z-1 flex items-center justify-center h-full pr-2 cursor-pointer group focus:outline-none size-10 opacity-75"
          type="button" id="next3" aria-label="Suivant"><img src="/icons/right.svg" alt=""></button>
      
      </section>
  </section>
	
</main>

<script async src="/utils/carousel.js"></script>
	
<%- include('partials/footer') %>